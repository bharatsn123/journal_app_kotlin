<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="journal"
            type="com.bharatcoding.journalapplication.Journal" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/outline"
        app:strokeWidth="0.5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Journal Image Banner (if available) -->
            <ImageView
                android:id="@+id/journal_row_image"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:background="@color/surface_variant"
                android:visibility="@{journal.hasImage ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/journaling_illustration"
                tools:visibility="visible" />

            <!-- Default Placeholder Image (when no image) -->
            <ImageView
                android:id="@+id/journal_row_placeholder_image"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="@color/surface_variant"
                android:src="@drawable/journaling_illustration"
                android:visibility="@{journal.hasImage ? View.GONE : View.VISIBLE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="visible" />

            <!-- Content Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/journal_row_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Action Buttons Container -->
                <LinearLayout
                    android:id="@+id/action_buttons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Edit Button -->
                    <ImageButton
                        android:id="@+id/journal_row_edit_button"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Edit journal entry"
                        android:padding="6dp"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/gray" />

                    <!-- Share Button -->
                    <ImageButton
                        android:id="@+id/journal_row_share_button"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Share journal entry"
                        android:padding="6dp"
                        android:src="@drawable/ic_share"
                        android:tint="@color/gray" />

                </LinearLayout>

                <!-- Journal Title -->
                <TextView
                    android:id="@+id/journal_row_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{journal.title}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintEnd_toStartOf="@id/action_buttons_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Username -->
                <TextView
                    android:id="@+id/journal_row_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{journal.username}"
                    android:textColor="@color/primary"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/journal_row_title" />

                <!-- Journal Thoughts/Content -->
                <TextView
                    android:id="@+id/journal_row_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@{journal.thoughts}"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/journal_row_username" />

                <!-- Date and Time -->
                <TextView
                    android:id="@+id/journal_row_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@{journal.formattedTimeAdded}"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/journal_row_content" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
