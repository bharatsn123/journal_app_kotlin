<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JournalApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material Design 3 Dark Color Scheme -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/accent</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        
        <item name="colorTertiary">@color/primary_light</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/primary_dark</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        
        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/gray</item>
        <item name="colorOnSurfaceVariant">@color/gray_light</item>
        
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorErrorContainer">@color/error</item>
        <item name="colorOnErrorContainer">@color/on_error</item>
        
        <item name="colorOutline">@color/gray</item>
        <item name="colorOutlineVariant">@color/gray_dark</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.JournalApplication.HeadlineLarge.Dark</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.JournalApplication.HeadlineMedium.Dark</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.JournalApplication.HeadlineSmall.Dark</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.JournalApplication.BodyLarge.Dark</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.JournalApplication.BodyMedium.Dark</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.JournalApplication.BodySmall.Dark</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.JournalApplication.LabelLarge.Dark</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.JournalApplication.LabelMedium.Dark</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.JournalApplication.LabelSmall.Dark</item>
    </style>
    
    <!-- Dark Typography Styles -->
    <style name="TextAppearance.JournalApplication.HeadlineLarge.Dark" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.JournalApplication.HeadlineMedium.Dark" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.JournalApplication.HeadlineSmall.Dark" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.JournalApplication.BodyLarge.Dark" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.JournalApplication.BodyMedium.Dark" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/gray_light</item>
    </style>
    
    <style name="TextAppearance.JournalApplication.BodySmall.Dark" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/gray_light</item>
    </style>
    
    <style name="TextAppearance.JournalApplication.LabelLarge.Dark" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.JournalApplication.LabelMedium.Dark" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/gray_light</item>
    </style>
    
    <style name="TextAppearance.JournalApplication.LabelSmall.Dark" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/gray_light</item>
    </style>
</resources>